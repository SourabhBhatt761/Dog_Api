<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

    <ImageView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:text="Hello World!"
            android:id="@+id/iv_dog"
            android:layout_marginTop="111dp"
            android:layout_marginBottom="67dp" app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/btn_dog" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="55dp" android:layout_marginEnd="55dp"/>
    <Button
            android:layout_width="150dp"
            android:id="@+id/btn_dog"
            android:textAllCaps="false"
            android:text="Next Image "
            android:layout_height="70dp"
            app:layout_constraintTop_toBottomOf="@+id/iv_dog" android:layout_marginBottom="203dp"
            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>